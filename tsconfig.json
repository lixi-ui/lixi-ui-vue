{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    // 这样就可以对 `this` 上的数据属性进行更严格的推断
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitThis": false,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@lixi/*": ["src/*"],
      "@site/*": ["site/*"]
    },
    "noLib": false,
    "lib": ["ESNext", "DOM"]
  },
  "exclude": [
    "node_modules",
    "node_modules1",
    "material/*",
    "src/components/*",
    "**/*.md",
    "**/*.spec.ts",
    "src/utils/*",
    "src/hooks/*",
    "src/directives/*",
    "src/locale/*",
    "src/tokens/*"
  ],
  "include": ["**/*.ts", "**/*.tsx"]
}